# Database Configuration
POSTGRES_USER=grove
POSTGRES_PASSWORD=changeme
POSTGRES_DB=grove

# Application Configuration
WEB_PORT=8000
LOG_LEVEL=info

# SimpleFIN Configuration
# OPTIONAL: Limit how far back to pull during initial sync (for dev/testing)
# If not set, will walk back until 2 consecutive empty months (recommended for production)
# Example: Set to "12" to limit initial sync to 12 months for faster testing
# SIMPLEFIN_INITIAL_SYNC_MONTHS=12

# Duplicate Account Detection
# Number of recent transactions to compare when detecting duplicates (default: 5)
DUPLICATE_DETECTION_SAMPLE_SIZE=5
# Minimum match ratio required (0.8 = 80%, meaning 4 out of 5 transactions must match)
DUPLICATE_DETECTION_MIN_MATCH_RATIO=0.8
